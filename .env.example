# Example environment variables for the Poker France Tournaments monorepo.
# Copy this file to `.env` and populate the placeholders with your own values.

# Global settings
TZ={{TIMEZONE}}

# Database settings – Neon Postgres
DATABASE_URL=postgresql+psycopg://YOUR_DB_USER:YOUR_DB_PASSWORD@YOUR_NEON_DB_HOST/YOUR_DB_NAME

# PostGIS extension must be enabled on the target database. See schema/README.md

# API settings
API_HOST={{API_HOST}}
API_PORT=8000
API_SECRET_KEY=super-secret-key-change-me

# Admin credentials for the API (/admin endpoints). These should be stored in
# your secret manager (e.g. GitHub Secrets, Fly secrets) and never committed.
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this

# Next.js frontend settings
NEXT_PUBLIC_API_URL=https://your-api-domain.example.com

# Monitoring settings
ALERT_EMAIL={{USER_EMAIL}}
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Geocoding
# User agent for Nominatim. According to the usage policy, you must set a
# descriptive user agent that identifies your application【512638780003458†L27-L33】.
GEOCODER_USER_AGENT=poker-fr-tournaments/1.0 ({{USER_EMAIL}})
GEOCODER_MIN_DELAY_SECONDS=1
